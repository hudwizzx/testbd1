<Window x:Class="testbd.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="250" Width="400">
    <Grid>
        <Label Content="Login:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,50,0,0"/>
        <TextBox Name="LoginTextBox" HorizontalAlignment="Left" Margin="120,50,0,0" VerticalAlignment="Top" Width="200"/>

        <Label Content="Пароль:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,100,0,0"/>
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" Margin="120,100,0,0" VerticalAlignment="Top" Width="200"/>

        <Button Content="Войти" HorizontalAlignment="Left" Margin="120,150,0,0" VerticalAlignment="Top" Width="100" Click="LoginButton_Click"/>
        
    </Grid>
</Window>
